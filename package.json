        "eslint-config-holy-grail": "^61.0.1",
        "husky": "^9.1.7",
        "karma": "^6.4.4",
        "karma-chrome-launcher": "^3.2.0",
        "karma-firefox-launcher": "^2.1.3",
        "karma-mocha": "^2.0.1",
