        "sinon-chai": "^3.7.0",
        "terser-webpack-plugin": "^5.3.14",
        "ts-loader": "^9.5.4",
        "tsconfig-holy-grail": "^15.0.2",
        "tslint": "^6.1.3",
        "tslint-config-holy-grail": "^56.0.6",
        "typescript": "^5.9.2",
        "webpack": "^5.101.3",
        "webpack-cli": "^6.0.1"
