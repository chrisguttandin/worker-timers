        "worker-timers-worker": "^9.0.11"
    },
    "description": "A replacement for setInterval() and setTimeout() which works in unfocused windows.",
    "devDependencies": {
        "@babel/cli": "^7.28.3",
        "@babel/core": "^7.28.4",
        "@babel/plugin-external-helpers": "^7.27.1",
